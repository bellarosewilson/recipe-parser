<h1>
  List of all steps
</h1>

<hr>

<article>
  <header>
    <h2>
      Add a new step
    </h2>
  </header>

  <form action="/insert_step" method="post">
    <div>
      <label for="recipe_id_box">
        Recipe
      </label>

      <input type="text" id="recipe_id_box" name="query_recipe_id">
    </div>

    <div>
      <label for="position_box">
        Position
      </label>

      <input type="text" id="position_box" name="query_position">
    </div>

    <div>
      <label for="instruction_box">
        Instruction
      </label>

      <input type="text" id="instruction_box" name="query_instruction">
    </div>

    <button type="submit">
      Create step
    </button>
  </form>
</article>

<hr>

<article>
  <ul>
    <% @list_of_steps.each do |a_step| %>
      <li>
        <a href="/steps/<%= a_step.id %>">
          Step #<%= a_step.id %>
        </a>
      </li>
    <% end %>
  </ul>
</article>

<hr>
