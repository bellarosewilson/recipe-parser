<h1>
  Step #<%= @the_step.id %> details
</h1>

<article>
  <div>
    <%= link_to "Go back", steps_path %>
  </div>

  <div>
    <%= button_to "Delete step", step_path(@the_step), method: :delete, data: { turbo_confirm: "Delete this step?" } %>
  </div>
  <dl>
    <dt>
      Recipe
    </dt>
    <dd>
      <%= @the_step.recipe_id %>
    </dd>

    <dt>
      Position
    </dt>
    <dd>
      <%= @the_step.position %>
    </dd>

    <dt>
      Instruction
    </dt>
    <dd>
      <%= @the_step.instruction %>
    </dd>

    <dt>
      Created at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_step.created_at) %> ago
    </dd>

    <dt>
      Updated at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_step.updated_at) %> ago
    </dd>
  </dl>
</article>

<hr>


<article>
  <header>
    <h2>
      Edit step
    </h2>
  </header>

  <%= form_with model: @the_step, url: step_path(@the_step), method: :patch do |f| %>
    <div class="mb-3">
      <%= f.label :recipe_id, "Recipe", class: "form-label" %>
      <%= f.number_field :recipe_id, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :position, "Position", class: "form-label" %>
      <%= f.text_field :position, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :instruction, "Instruction", class: "form-label" %>
      <%= f.text_field :instruction, class: "form-control", required: true, maxlength: 2000 %>
    </div>

    <%= f.submit "Update step", class: "btn btn-primary" %>
  <% end %>
</article>

<hr>
