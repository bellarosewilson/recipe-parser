<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h2 class="card-title mb-4">Edit account</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "devise-form" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="mb-4">
            <%= f.label :preferred_units, "Preferred units", class: "form-label" %>
            <%= f.select :preferred_units, preferred_unit_options, { include_blank: "Choose units (optional)" }, { class: "form-select" } %>
          </div>

          <hr class="my-4">

          <h3 class="h6 text-muted mb-3">Change password (leave blank to keep current)</h3>

          <div class="mb-3">
            <%= f.label :password, "New password", class: "form-label" %>
            <% if @minimum_password_length %>
              <span class="form-text">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "••••••••" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "••••••••" %>
          </div>

          <div class="mb-4">
            <%= f.label :current_password, "Current password", class: "form-label" %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Required to save changes" %>
          </div>

          <div class="d-flex flex-wrap gap-2 align-items-center">
            <%= f.submit "Update account", class: "btn btn-primary" %>
            <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
