<div class="col">
  <div class="card h-100 shadow-sm">
    <% if recipe.original_image.attached? %>
      <%= image_tag recipe.original_image, class: "card-img-top", style: "object-fit: cover; height: 180px;", alt: recipe.title.presence || "Recipe image" %>
    <% else %>
      <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-white" style="height: 180px;">
        <span>No image</span>
      </div>
    <% end %>
    <div class="card-body d-flex flex-column">
      <h3 class="card-title h6"><%= recipe.title %></h3>
      <%= link_to "View recipe", recipe_path(recipe), class: "btn btn-outline-primary btn-sm mt-auto" %>
    </div>
  </div>
</div>
