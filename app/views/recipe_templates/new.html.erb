<h1 class="mb-4">Upload Recipe</h1>

<div class="card shadow-sm" style="max-width: 32rem;">
  <div class="card-body">
    <p class="text-muted mb-3">Choose a photo of a recipe (screenshot or photo). We'll extract the title, ingredients, and steps.</p>
    <%= form_with url: recipes_path, method: :post, multipart: true, data: { controller: "file-size", file_size_max_mb_value: "10" } do |f| %>
      <div class="mb-3">
        <%= f.file_field :recipe_file, accept: "image/*", required: true, class: "form-control", data: { file_size_target: "input" } %>
        <div class="text-danger small mt-1 d-none" data-file-size-target="message" role="alert"></div>
      </div>
      <%= f.submit "Upload Recipe", class: "btn btn-primary", data: { file_size_target: "submit" } %>
      <%= link_to "Cancel", recipes_path, class: "btn btn-outline-secondary ms-2" %>
    <% end %>
  </div>
</div>
